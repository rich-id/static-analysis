{
    "name": "richcongress/static-analysis",
    "description": "A library to setup quickly the static analysis tools for RichCongress",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nicolas Guilloux",
            "email": "nguilloux@richcongress.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "jschaedl/composer-git-hooks": "^4.0",
        "friendsofphp/php-cs-fixer": "^2.0 || ^3.0",
        "nunomaduro/phpinsights": "^1.0 || ^2.0",
        "phpmetrics/phpmetrics": "^2.7",
        "phpstan/phpstan": "^1.10.0"
    },
    "bin": [
        "bin/static_analysis"
    ],
    "config": {
        "bin-dir": "bin",
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
